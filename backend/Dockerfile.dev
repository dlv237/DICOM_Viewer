FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir uvicorn[standard] fastapi duckdb pydantic python-dotenv

# Copy code (will be overridden by volume in compose dev)
COPY . .

ENV DUCKDB_PATH=/data/app.duckdb

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
